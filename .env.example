# =============================================================================
# Tulkka AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# ENVIRONMENT=production

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
UVICORN_WORKERS=2
UVICORN_RELOAD=true

# Logging
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG
ENABLE_FILE_LOGGING=false
LOG_FILE=tulkka.log

# Temporary files directory
TEMP_DIR=/tmp

# -----------------------------------------------------------------------------
# Security (REQUIRED for production)
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_ALL=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# Database - Supabase (REQUIRED)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# -----------------------------------------------------------------------------
# Database - MySQL (REQUIRED for game content)
# -----------------------------------------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=tulkka_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=tulkka9
MYSQL_POOL_SIZE=10

# -----------------------------------------------------------------------------
# AI Services (OPTIONAL - falls back to heuristics if disabled)
# -----------------------------------------------------------------------------

# Groq AI - for vocabulary/sentence extraction
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Google Gemini (optional)
GEMINI_API_KEY=your-gemini-api-key

# -----------------------------------------------------------------------------
# Transcription Services (OPTIONAL)
# -----------------------------------------------------------------------------
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
ASSEMBLYAI_BASE_URL=https://api.assemblyai.com/v2

# -----------------------------------------------------------------------------
# Zoom Integration (OPTIONAL - for fetching recordings)
# -----------------------------------------------------------------------------
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCESS_TOKEN=your-zoom-access-token
ZOOM_REFRESH_TOKEN=your-zoom-refresh-token

# -----------------------------------------------------------------------------
# Background Worker Settings
# -----------------------------------------------------------------------------
WORKER_POLL_INTERVAL_SECONDS=60
WORKER_BATCH_SIZE=10
WORKER_MAX_RETRIES=5