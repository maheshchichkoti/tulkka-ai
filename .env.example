# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# JWT Authentication (REQUIRED for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google APIs (OPTIONAL - for pronunciation and AI features)
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# AssemblyAI (OPTIONAL - for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Groq AI (REQUIRED for vocabulary/sentence extraction)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-70b-8192

# Background Worker Settings
WORKER_POLL_INTERVAL_SECONDS=60
WORKER_BATCH_SIZE=10
WORKER_MAX_RETRIES=5

# Application Settings
ENVIRONMENT=development
# ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG
# LOG_LEVEL=WARNING
# LOG_LEVEL=ERROR

# MySQL Database (REQUIRED for game content and progress)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=tulkka_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=tulkka9

# Note: Game population removed - backend team handles MySQL population manually
# AI backend only generates exercises and stores in Supabase

# n8n Integration (REQUIRED for automatic lesson processing)
N8N_WEBHOOK_URL=https://n8n-o0ph.onrender.com/webhook/zoom-recording-download

# Zoom API Configuration (OPTIONAL - for fetching recordings)
ZOOM_ACCESS_TOKEN=your-zoom-access-token
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_REFRESH_TOKEN=your-zoom-refresh-token

# Class Monitor (REQUIRED for automatic lesson processing)
# This service watches MySQL classes table and triggers n8n automatically
# No additional config needed - uses MYSQL_* and N8N_WEBHOOK_URL above
